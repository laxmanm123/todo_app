<script>
    window.onload = () => {
    document.getElementById('dstart').value = '<%-data.date_started%>';
    document.getElementById('tname').value = '<%-data.task_name%>';
    document.getElementById('dfin').value = '<%-data.complete_by%>';
    document.getElementById('description').value = '<%-data.description%>';
}
</script>
<body>
    <h1 style= "text-align: center;">Edit Form</h1>
    <form style= "text-align: center;",class= "form-group", action="/edit" method="post">
        <div class="form-group">
        <label  for="tname">Task Name:</label>
        <input type="text" id="tname" name="tname" value="">
        </div>
        <div class="form-group">
        <label  for="description">Description:</label>
        <input type="text" id="description" name="description">
        </div>
        <div class="form-group">
        <label  for="tname">Date Started:</label>
        <input type="text" id="dstart" name="dstart" value="">
        </div>
        <div class="form-group">
        <label  for="tname">Completion Goal:</label>
        <input type="text" id="dfin" name="dfin" value="">
        </div>
        <input type="submit"></input>
    </form>
    <form style="text-align: center" action="/tasks">
    <input type="submit" value="Cancel"></input>
    </form>
